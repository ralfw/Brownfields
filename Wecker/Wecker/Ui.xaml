<Window x:Class="Wecker.Ui"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Wecker" Height="128" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="32"/>
            <RowDefinition Height="32"/>
            <RowDefinition Height="32"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        
        <TextBox Grid.Row="0" Grid.Column="0" Name="txtWann" Text="12:00" />
        <Button Grid.Row =" 0" Grid.Column="1" Name="starten" Content="Wecken" />
        
        <TextBlock Grid.Row="1" Grid.Column="0" Text="Uhrzeit:"/>
        <Label Grid.Row="1" Grid.Column="1" Name="lblUhrzeit" HorizontalContentAlignment="Center"/>
        <TextBlock Grid.Row="2" Grid.Column="0" Text="Verbleibende Zeit:"/>
        <Label Grid.Row="2" Grid.Column="1" Name="lblRest" HorizontalContentAlignment="Center"/>
    </Grid>
</Window>
